{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "css.validate": false,
  "scss.validate": false,
  "eslint.enable": true,
  "stylelint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "cSpell.words": [
    "cleancss",
    "gulpfile",
    "hiragino",
    "index",
    "js",
    "mincho",
    "mixins",
    "smacss",
    "stylelint",
    "tailwindcss",
    "tyellint",
    "yu"
  ]
}
